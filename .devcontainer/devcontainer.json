{
	"name": "Next.js Dev Container",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
	"forwardPorts": [3000],
	"postCreateCommand": "npm install",
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"bradlc.vscode-tailwindcss"
			]
		}
	}
}
